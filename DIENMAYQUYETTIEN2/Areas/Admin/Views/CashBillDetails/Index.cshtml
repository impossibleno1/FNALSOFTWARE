@model IEnumerable<DIENMAYQUYETTIEN2.Models.CashBillDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Admin_Layout.cshtml";
    int tong = 0;
}

<h2 style="padding-left: 250px;font-size: 40px; ">List Products</h2>

<table class="table" style="width: 70%;" >
    <thead>
        <tr>
            <th>
                Quantity
            </th>
            <th>
                Product Name
            </th>
            <th>
                Sale Price
            </th>
            <th>
                Total
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalePrice)
                </td>
                <td>
                    @(item.Quantity * item.SalePrice)
                </td>
                
            </tr>
            tong = tong + @item.Quantity * @item.SalePrice;
        }
    </tbody>
</table>

<div>
    <div class="form-group">
        <label class="control-label col-md-2">Grand Total</label>
        <div class="col-md-10">
            <input id="GrandTotal2"  class="disabled" value="@tong" disabled /> VNĐ
        </div>
        <label class="control-label col-md-2">Tong diem thuong</label>
        <div class="col-md-10">
            <input id="GrandTotal2" class="disabled" value="@Model.Sum(m => @tong * 5)" disabled /> VNĐ
        </div>
    </div>
</div>