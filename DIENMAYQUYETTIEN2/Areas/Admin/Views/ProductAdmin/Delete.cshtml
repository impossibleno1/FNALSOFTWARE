@model DIENMAYQUYETTIEN2.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Admin_Layout.cshtml";
}
<div style="height: 20px;"></div>
<div style="display: flex; justify-content: center; flex-direction: row;">
    <h2>Delete Product</h2>
</div>
<div style="display: flex; justify-content: center; flex-direction: row;">
    <h3>Are you sure you want to delete this?</h3>
</div>
<div>
    <div class="dl-horizontal" style="display: flex; justify-content: center; flex-direction: row; margin-top: 30px; font-size: 18px">
        <div>
            <dl style="display: flex;">
                <dt>
                    @Html.DisplayNameFor(model => model.ProductCode):
                </dt>
                &nbsp;
                <dd>
                    @Html.DisplayFor(model => model.ProductCode)
                </dd>
            </dl>
            <dl style="display: flex;">
                <dt>
                    @Html.DisplayNameFor(model => model.ProductName):
                </dt>
                &nbsp;
                <dd>
                    @Html.DisplayFor(model => model.ProductName)
                </dd>
            </dl>
            <dl style="display: flex;">
                <dt>
                    @Html.DisplayNameFor(model => model.SalePrice):
                </dt>
                &nbsp;
                <dd>
                    @Html.DisplayFor(model => model.SalePrice)
                </dd>
            </dl>
            <dl style="display: flex;">
                <dt>
                    @Html.DisplayNameFor(model => model.OriginPrice):
                </dt>
                &nbsp;
                <dd>
                    @Html.DisplayFor(model => model.OriginPrice)
                </dd>
            </dl>
            <dl style="display: flex;">
                <dt>
                    @Html.DisplayNameFor(model => model.InstallmentPrice):
                </dt>
                &nbsp;
                <dd>
                    @Html.DisplayFor(model => model.InstallmentPrice)
                </dd>
            </dl>
            <dl style="display: flex;">
                <dt>
                    @Html.DisplayNameFor(model => model.Quantity):
                </dt>
                &nbsp;
                <dd>
                    @Html.DisplayFor(model => model.Quantity)
                </dd>
            </dl>
            <div class="dl-horizontal" style="display: flex; justify-content: center; flex-direction: row; margin-top: 30px;">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-primary" />
                        <a title="Back" href="@Url.Action("Index")" class="btn btn-danger ">Back to list</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
